{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug gnc_sim (MSVC)",
            "type": "cppvsdbg", // 使用 MSVC 的调试器
            "request": "launch",
            // 指向你的可执行文件的完整路径
            "program": "${workspaceFolder}/build/debug/Debug/gnc_sim.exe",
            "args": [], // 如果你的程序需要命令行参数，在这里添加
            "stopAtEntry": true, // 如果设为 true，程序会停在 main 函数的第一行
            "cwd": "${workspaceFolder}", // 设置工作目录为项目根目录
            "environment": [
                
            ],
            "console": "integratedTerminal" // 在 VS Code 的集成终端中显示输出
        }
    ]
}